{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true
  },
  "filesGlob": [
    "typings/main.d.ts",
    "src/**/*.ts",
    "src/*.ts",
    "test/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "typings"
  ],
  "files": [
    "src\\front-matter.d.ts",
    "src\\fsUtils.ts",
    "src\\index.ts",
    "src\\mdProcessing.ts",
    "test\\fileSystemSpec.ts",
    "test\\processingSpec.ts",
    "test\\test_content\\test-strings.ts"
  ]
}